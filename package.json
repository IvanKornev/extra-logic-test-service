{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "debug": "eslint ./resources/js/",
        "test": "cross-env NODE_ENV=test jest",
        "debug:fix": "eslint --fix ./resources/js/",
        "format": "prettier --write ./resources/js/ --config ./.prettierrc.json"
    },
    "jest": {
        "roots": [
            "<rootDir>/resources/js/src"
        ],
        "moduleNameMapper": {
            "^@components.*$": "<rootDir>/resources/js/src/components",
            "^@api.*$": "<rootDir>/resources/js/src/api",
            "^@domains.*$": "<rootDir>/resources/js/src/domains",
            "^@hooks.*$": "<rootDir>/resources/js/src/hooks",
            "^@data-structures.*$": "<rootDir>/resources/js/src/data-structures",
            "^@lib.*$": "<rootDir>/resources/js/src/lib/converters",
            "^@constants.*$": "<rootDir>/resources/js/src/constants",
            "^@global-states.*$": "<rootDir>/resources/js/src/global-states"
        }
    },
    "devDependencies": {
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.17.12",
        "babel-jest": "^28.1.0",
        "browser-sync": "^2.27.10",
        "browser-sync-webpack-plugin": "^2.3.0",
        "eslint": "^8.16.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.30.0",
        "faker": "^6.6.6",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "laravel-mix": "^6.0.6",
        "postcss": "^8.1.14",
        "prettier": "^2.6.2"
    },
    "dependencies": {
        "@emotion/react": "^11.9.0",
        "@emotion/styled": "^11.8.1",
        "@faker-js/faker": "^7.1.0",
        "@iconscout/react-unicons": "^1.1.6",
        "@mui/material": "^5.8.0",
        "axios": "^0.27.2",
        "cross-env": "^7.0.3",
        "eslint-import-resolver-webpack": "^0.13.2",
        "formik": "^2.2.9",
        "lodash": "^4.17.21",
        "mobx": "^6.6.0",
        "mobx-react-lite": "^3.4.0",
        "prop-types": "^15.8.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "uniqid": "^5.4.0",
        "uuid": "^8.3.2"
    }
}
